extends layout

block content
  .row
    .col-md-6
      .panel.panel-default
        .panel-heading
          h3.panel-title Usage
        .panel-body
          h4 Cpu usage:
          .progress
            .progress-bar#cpuUsage(role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 0;")
          h4 Memory usage:
          .progress
            .progress-bar#memUsage(role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 0;")
    .col-md-6
      .panel.panel-default
        .panel-heading
          h3.panel-title Console
        .panel-body
          .console(style="max-height:98.5px;")
        .panel-footer
          form#command
            .row
              .col-md-10.col-sm-10
                input.form-control.control#command-input
              .col-md-2.col-sm-2
                button.btn.btn-success.control#send-command(type="submit") Go

  .panel.panel-default
    .panel-heading
      h3.panel-title Server Controls
    .panel-body
      .row
        .col-sm-3.col-md-3
          a.btn.btn-default.control#reload-data Reload server status
        .col-sm-3.col-md-3
          a.btn.control.action.animated.bounceIn#server-start-stop
        .col-sm-3.col-md-3
          a.btn.btn-success.control.action.hidden.animated.bounceIn#save-world Save world
