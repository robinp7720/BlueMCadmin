doctype html
html(lang="en")
    head
         meta(charset="utf-8")
         meta(http-equiv="X-UA-Compatible", content="IE=edge")
         meta(name="viewport", content="width=device-width, initial-scale=1")
         title Sign in
         link(href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/yeti/bootstrap.min.css", rel="stylesheet")
         link(href="stylesheets/signin.css", rel="stylesheet")
    body
        .container
            form.form-signin(method="post" action="/login")
                h2.form-signin-heading Please sign in
                label.sr-only(for="inputEmail") Username
                input#inputEmail.form-control(type="text", placeholder="Username", required="", autofocus="" name="username")
                label.sr-only(for="inputPassword") Password
                input#inputPassword.form-control(type="password", placeholder="Password", required="" name="password")
                button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign in